! /bin/sh

#This abomination is an array work file
#Step 1: Send the message
echo "Create an array filled with 10 items"
echo "Be sure to get a mix of floating point numbers, integers, and text"
echo ""

function RandoAdd
{
	#This function will take the hero name and add it somewhere into the array
	#Get a random number from 1-10
	hero=$1
	rnd=$((($RANDOM%10)))
	#rnd=9
	echo "Rando number is: "$rnd
	#We have the random number so lets handle each case one at a time
	newArr+=""
	if [ $rnd -eq 0 ];then
		#We got lucky, just make a new array starting with the hero name and add to it the normal array
		newArr[0]=$1
		#This main loop will build a new array around the hero and add the first array to it
		for(( i=0; i<$arrLen; i=i+1));
		do
			newArr[$i+1]+=${myArr[$i]}
		done
		echo ${newArr[*]}
	elif [ $rnd -eq 9 ];then
		#In this instance the hero just needs to be added to the end of our first array
		myArr+=($hero)
		echo ${myArr[*]}
	else
		#echo "Entered final else"
		#If we get here the add is somewhere in the middle of the array
		#Step1: Add myArr elements to newArr up to the point of the hero
		for(( i=0; i<11; i=i+1));
		do
			if [ $i -eq $rnd ];then
				newArr[$i]+=$hero
			else
				newArr[$i]+=${myArr[$i]}
			fi
		done
		echo ${newArr[*]}
	fi
}

#Initialize the array and cowunter
indexCt=0
myArr+=''
declare -a myArr=("Incredable_Hulk" "2.0" "-3.7" "John_Conner" "Samwise" "69" "420_Yolo" "cat" "dog" "lizard")
#while [ $indexCt -le 9 ];
#do
	#inText=''
	#echo 'Please enter a word or number for index position: ' $indexCt
	#read -p 'Enter Data Here: ' inText
	##Remove any spaces
	#inText=$(tr -s ' ' '_' <<< "$inText")
	#myArr[$indexCt]=$inText
	##Incriment the index
	#indexCt=$(($indexCt+1))
#done

#Get the array length
echo ""
arrLen=${#myArr[*]}
echo "This array has " $arrLen " items"
echo ""

#Print out the array
echo "This is the array"
echo ${myArr[*]}
echo ""

#Swap the first and last items in the array and print it out
storage=${myArr[0]}
myArr[0]=${myArr[-1]}
myArr[$arrLen-1]=$storage
echo "This is the array after swapping the first and last index"
echo ${myArr[*]}
echo ""

#Print the first three items of the array and then the last three items of the array
echo "These are the first three and the last three items in the array"
stubArr+=''
stubArr[0]=${myArr[0]}
stubArr[1]=${myArr[1]}
stubArr[2]=${myArr[2]}
stubArr[3]=${myArr[-3]}
stubArr[4]=${myArr[-2]}
stubArr[5]=${myArr[-1]}
echo ${stubArr[*]}
echo ""

#Loop through the arry and print off each element
for(( i=0; i<$arrLen; i=i+1));
do
	echo ${myArr[$i]}
done
echo ""

#Determine if there is a cat in the array
cat=0
for i in ${myArr[*]};
do
	if [[ $i == "cat" ]];then
		echo "There is a cat in my array"
		cat=$(($cat+1))
		break
	fi
done
if [ $cat -eq 0 ];then
	echo "There is no cat in my array"
fi
echo ""

#Take in a marvel superhero name and put it somewhere randomly in the array
heroName="Spider Man"
#read -p 'Please insert the name of a Marvel character: ' heroName
#Remove the spaces
heroName=$(tr -s ' ' '_' <<< "$heroName")
RandoAdd $heroName

#Get only the integers from the array into a new array and sort them
declare -a intArr=("")
for i in $myArr;
do
	test=${myArr[$i]}
	if[[ $test =~ ^-?[0-9]+$ ]];then
		#This is an integer so add it to the int array
		$intArr+=($myArr[$i])
	fi
done
echo ${intArr[*]}
